{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "api:dev": "turbo run dev --filter=api",
    "client:dev": "turbo run dev --filter=client",
    "build": "turbo build",
    "postbuild": "mv apps/api/dist dist/ && mkdir dist/static && mv apps/client/dist/* dist/static",
    "start": "node dist/main.js",
    "clean:dist": "turbo run clean:dist && rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yubisel/tasks"
  },
  "author": "Ing. Yubisel Vega Alvarez",
  "license": "ISC",
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "^1.10.8"
  }
}
